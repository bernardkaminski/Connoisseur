<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.mcgill.ecse428.restoguys.connoisseur"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ca.mcgill.ecse428.restoguys.connoisseur.HomeScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.mcgill.ecse428.restoguys.connoisseur.History"
            android:label="@string/title_activity_history"
            android:parentActivityName="ca.mcgill.ecse428.restoguys.connoisseur.HomeScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeScreen" />
        </activity>
        <activity android:name="ca.mcgill.ecse428.restoguys.connoisseur.RestaurantSelection" >
        </activity>
        <activity android:name="ca.mcgill.ecse428.restoguys.connoisseur.RestaurantDetails" >
        </activity>
    </application>

</manifest>